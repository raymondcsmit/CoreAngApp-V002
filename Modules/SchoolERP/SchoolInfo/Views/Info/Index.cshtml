@model SchoolMS.Models.CompanyInfoViewModel.CompanyInfoCRUDViewModel
@{
    ViewData["Title"] = "Organization Info";
}

<div class="wrapper">
    <div class="panel panel-hash">
        <div class="panel-heading">
            <div style="display: inline-block;">
                <h3 class="pull-right"><b><a class="btn btn-danger btn-sm" asp-action="Edit">Organization Info: Edit</a></b></h3>                 
            </div>
        </div>
        <div class="panel-body scroll panel-height">
            <table class="CustomBlueTable">
                <tr>
                    <th>ID</th>
                    <td>@Model.Id</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <th>Logo</th>
                    <td>
                        <div class="user-panel mt-2 pb-2 mb-2 d-flex">
                            <div class="image">
                                <img src="@Model.Logo" class="img-circle elevation-2" alt="Asset Image">
                            </div>
                            <div class="info">
                                <a href="#" class="d-block" onclick="ViewImage('@Model.Logo', '@Model.Name')">
                                    @Model.Name
                                </a>
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <th>Invoice No Prefix</th>
                    <td>@Model.InvoiceNoPrefix</td>
                </tr>
                <tr>
                    <th>Quote No Prefix</th>
                    <td>@Model.QuoteNoPrefix</td>
                </tr>
                <tr>
                    <th>Address</th>
                    <td>@Model.Address</td>
                </tr>
                <tr>
                    <th>Country</th>
                    <td>@Model.Country</td>
                </tr>
                <tr>
                    <th>Phone</th>
                    <td>@Model.Phone</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>@Model.Email</td>
                </tr>
                <tr>
                    <th>Fax</th>
                    <td>@Model.Fax</td>
                </tr>
                <tr>
                    <th>Website</th>
                    <td>@Model.Website</td>
                </tr>
                <tr>
                    <th>Shop No</th>
                    <td>@Model.ShopNo</td>
                </tr>
                <tr>
                    <th>Street Name</th>
                    <td>@Model.StreetName</td>
                </tr>
                <tr>
                    <th>Post Code</th>
                    <td>@Model.PostCode</td>
                </tr>
                <tr>
                    <th>Office</th>
                    <td>@Model.Office</td>
                </tr>
                <tr>
                    <th>Mobile</th>
                    <td>@Model.Mobile</td>
                </tr>
                <tr>
                    <th>Password</th>
                    <td><input asp-for="Password" class="form-control" type="password" /></td>
                </tr>
                <tr>
                    <th>Host Name</th>
                    <td>@Model.HostName</td>
                </tr>
                <tr>
                    <th>Terms And Condition</th>
                    <td>@Model.TermsAndCondition</td>
                </tr>
                <tr>
                    <th>Terms And Condition Item Sale</th>
                    <td>@Model.TermsAndConditionItemSale</td>
                </tr>
                <tr>
                    <th>Company Number</th>
                    <td>@Model.CompanyNumber</td>
                </tr>
                <tr>
                    <th>Vat Number</th>
                    <td>@Model.VatNumber</td>
                </tr>
                <tr>
                    <th>Card Percentage</th>
                    <td>@Model.CardPercentage</td>
                </tr>
                <tr>
                    <th>Vat</th>
                    <td>@Model.IsVat</td>
                </tr>
                <tr>
                    <th>Whitelist IP</th>
                    <td>@Model.WhitelistIP</td>
                </tr>


                <tr>
                    <th>Created Date</th>
                    <td>@Model.CreatedDate.ToString("dddd, dd MMMM yyyy HH:mm:ss")</td>
                </tr>
                <tr>
                    <th>Created By</th>
                    <td>@Model.CreatedBy</td>
                </tr>
                <tr>
                    <th>
                    </th>
                    <td>
                        <a class="btn btn-danger btn-sm" asp-action="Edit">Edit</a>
                    </td>
                </tr>
            </table>
        </div>
    </div>

    <partial name="~/Views/UIComponents/_bootstrapAlert.cshtml" />
</div>

<style>
    .panel-heading {
        padding: 0px 0px 0px 25px;
    }

    .panel-body {
        padding: 0px 25px 0px 25px;
    }

    .h4 {
        margin-top: 1px;
        margin-bottom: 1px;
    }
</style>

